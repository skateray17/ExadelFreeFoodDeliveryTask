{{#each days}}
<div class="menu-item">
    <div class="menu-item__day">{{day}}</div>
    {{#if menuExists}}
    {{#each dish}}
    <div class="menu-item__dish">
        <div class="dish-name">{{name}}</div>
        <div class="dish-weight">{{weight}}</div>
        <div class="dish-price">{{cost}}</div>
    </div>
    {{/each}}
    {{else}}
    <div style="font-size: 20px">no menu</div>
    {{/if}}
</div>
{{/each}}