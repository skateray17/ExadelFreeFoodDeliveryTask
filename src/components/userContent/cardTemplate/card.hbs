<div class="card shadow">
    <div class="header"></div>
    <div class="card-inside">
        <div class="card-content {{#if emptyMenu}} center-text {{/if}}">
            {{#unless active}}
                <div class="not-available-menu">Меню еще недоступно</div>
            {{/unless}}

            {{#if emptyMenu}}
                {{#if active}}
                <div class="not-chosen-menu">
                    <p>Меню не выбрано</p>
                    <img src="{{imageUrl}}" class="dog"/>
                </div>
                    {{/if}}
            {{/if}}
        </div>
        <div class="free-space"></div>
        {{#if active}}
            <div class="card-footer">
                {{#if sumPrice}}
                    <div class="order-price">Сумма заказа: {{orderPrice}} р</div>
                {{/if}}
                {{#if showButton }}
                    <button class="edit-button">{{button}}</button>
                {{/if}}
            </div>
        {{/if}}
    </div>
</div>